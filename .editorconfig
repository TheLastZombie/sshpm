root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{bat,cmd}]
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false

[/src/assets/**]
indent_style = unset
indent_size = unset
charset = unset
trim_trailing_whitespace = unset
insert_final_newline = unset
